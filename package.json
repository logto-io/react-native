{
  "name": "@logto/react-native",
  "description": "Logto React Native SDK",
  "version": "0.1.0",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "logto-react-native.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "license": "MIT",
  "repository": "https://github.com/logto-io/react-native.git",
  "author": {
    "name": "Logto",
    "url": "https://logto.io"
  },
  "homepage": "https://github.com/logto-io/react-native.git#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build"
  },
  "dependencies": {
    "@logto/client": "1.0.0-beta.3",
    "@peculiar/webcrypto": "^1.4.0",
    "@react-native-async-storage/async-storage": "^1.17.9",
    "crypto-browserify": "^3.12.0",
    "fastestsmallesttextencoderdecoder": "^1.0.22",
    "js-base64": "^3.7.2",
    "react-native-webview": "^11.23.0",
    "text-encoding-polyfill": "^0.6.7"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/preset-env": "^7.18.10",
    "@commitlint/config-conventional": "^17.0.2",
    "@silverhand/essentials": "^1.2.0",
    "@silverhand/ts-config": "1.0.0-rc.2",
    "@silverhand/ts-config-react": "1.0.0-rc.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.68.0",
    "commitlint": "^17.0.2",
    "eslint": "^8.9.0",
    "jest": "^28.1.1",
    "prettier": "^2.0.5",
    "react": "17.0.2",
    "react-native": "0.68.2",
    "react-native-builder-bob": "^0.18.3",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@silverhand/react"
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": "@silverhand/eslint-config/.prettierrc",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "alias": {
    "superstruct": "superstruct/lib/index.es.js"
  }
}
