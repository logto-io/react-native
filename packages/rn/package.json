{
  "name": "@logto/rn",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.1.0",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./polyfill": {
      "import": "./lib/polyfill.js",
      "require": "./lib/polyfill.js"
    }
  },
  "files": [
    "lib"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/logto-io/react-native.git",
    "directory": "packages/rn"
  },
  "scripts": {
    "dev:tsc": "tsc -p tsconfig.build.json -w --preserveWatchOutput",
    "check": "tsc --noEmit",
    "build": "rm -rf lib/ && tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts src",
    "test": "vitest src/"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@silverhand/eslint-config": "^5.0.0",
    "@silverhand/eslint-config-react": "^5.0.0",
    "@silverhand/ts-config": "^5.0.0",
    "@silverhand/ts-config-react": "^5.0.0",
    "@types/react": "~18.2.45",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "eslintConfig": {
    "extends": "@silverhand/react"
  },
  "prettier": "@silverhand/eslint-config/.prettierrc",
  "dependencies": {
    "@logto/client": "3.0.0-alpha.2",
    "@logto/js": "4.0.0-alpha.2",
    "@react-native-async-storage/async-storage": "^1.22.0",
    "crypto-es": "^2.1.0",
    "expo-crypto": "^12.8.0",
    "expo-secure-store": "^12.8.1",
    "expo-web-browser": "^12.8.2",
    "js-base64": "^3.7.6"
  }
}
